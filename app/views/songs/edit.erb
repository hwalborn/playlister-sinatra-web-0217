<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/songs/<%= @song.slug %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <h1>Update Song <%= @song.name %></h1>
      <br></br>
      <label>Artist Name:</label>
      <br></br>
      <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">
      <br></br>
      <label>Genre:</label>
      <br></br>
      <% Genre.all.each do |genre| %>
      <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
      <% end %>
      <br></br>
      <input type="submit" value="Save">
    </form>
  </body>
</html>
