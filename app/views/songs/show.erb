<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>
    <h1><%= @song.name %></h1>
    <h2><%= @song.artist.name %></h2>
    <a href="/artists/<%= @song.artist.slug %>"></a>
    <% @song.genres.each do |genre| %>
    <p><%= genre.name %></p>
    <a href="/genres/<%= genre.slug %>"></a>
    <% end %>
  </body>
</html>
